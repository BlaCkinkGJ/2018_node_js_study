doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
            a(href='/topic') Server Side Javascript
        ul
            each topic in topics
                li 
                    a(href='/topic/'+topic._id)= topic.title
        artcle
          form(action='/topic/'+topic._id+'/edit' method='post' enctype='multipart/form-data')
            p
              input(type='text' name='title' value=topic.title placeholder='title')
            p
              textarea(name='description' placeholder='description')
                =topic.description
            p
              input(type='text' name='author' value=topic.author placeholder='author')
            p
              input(type='file' name='userfile')
            p
              input(type='submit')  